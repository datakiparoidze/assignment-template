
public class Main {
    public static void main(String[] args) {

     //1.დაწერეთ private static boolean contains(int x, int[] arr) მეთოდი, რომელიც ამოწმებს გადაცემული მასივი შეიცავს თუ არა x-ს.


        System.out.println(contains(5, new int[] {1,2,3,4,5}));
        System.out.println(sameFirstLast(new int[] {1,2,3}));
        System.out.println(countEvents(new int[] {1,2,3,4,5,6}));
        System.out.println(massive(new int[] {1,2,3,4}));
        System.out.println(countAvarage(new int[] {1,2,3,4,5}));
    }

    private static boolean contains(int x, int[] myArray){
        for (int i = 0; i < myArray.length; i++) {
            if (myArray[i] == x){
                return true;
            }
        }
        return false;

    }

    //2.დაწერეთ მეთოდი private static boolean sameFirstLast(int[] nums), რომელიც აბრუნებს true-ს თუ მისი პირველი და ბოლო ელემენტი ტოლია,
    // false-ს წინააღმდეგ შემთხვევაში. მაგალითად: sameFirstLast([1, 2, 3]) -> false; sameFirstLast([1, 2, 3, 1]) -> true.
    private static boolean sameFirstLast(int[] nums){
        for (int i = 0; i < nums.length; i++) {
            if (nums[0] == nums[nums.length - 1]){
                return true;
            }
        }
        return false;
    }


    //3.დაწერეთ მეთოდი countEvents(int[] arr), რომელიც დაგიბრუნებთ რიცხვს -
    // რამდენი ლუწი რიცხვია მასივში. მაგალითად: countEvens([2, 2, 0]) → 3; countEvens([1, 3, 5]) → 0.

    private static int countEvents(int[] arr){
        int evenCounter = 0;
        for (int i = 0; i < arr.length ; i++) {
            if (arr[i] % 2 == 0)
                evenCounter ++;

        }
        return evenCounter ;
    }


    //4.დაწერეთ მეთოდი, რომელიც მიიღებს მთელი რიცხვების მასივს და დააბრუნებს მის ყველა ელემენტის ჯამს.

    private static int massive(int[] array){
        int sum = 0;
        for (int i = 0; i < array.length; i++) {
            sum = sum + array[i];
        }
        return sum;
    }


    //5.დაწერეთ მეთოდი private static int countAvarage(int[] a), რომელიც იღებს ინტების მასივს და აბრუნებს ამ მასივში ელემენტების საშუალოს.

    private static int countAvarage(int[] a){
        int summary = 0;
        for (int i = 0; i < a.length; i++) {
            summary = summary + a[i];
        }
        return summary / a.length;
    }




}
